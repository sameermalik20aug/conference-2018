<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/formainactivity"
        android:scaleType="centerCrop"
        />

    <android.support.v7.widget.CardView
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="11dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/chewy"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="I C E I L 2018"
            android:textSize="23sp"
            android:gravity="center"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="297dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="11dp"
        android:background="#FFFFFF"
        >

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:src="@drawable/aboutus"
            android:scaleType="centerCrop"
            />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="123dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnProf"
        android:layout_marginBottom="182dp"
        app:cardCornerRadius="11dp"
        android:background="#FFFFFF"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/chewy"
            android:gravity="center"
            android:text="Speakers"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="123dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnSch"
        android:layout_marginBottom="182dp"
        app:cardCornerRadius="11dp"
        android:background="#FFFFFF"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/chewy"
            android:gravity="center"
            android:text="Schedule"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="123dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnDir"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="11dp"
        android:background="#FFFFFF"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/chewy"
            android:gravity="center"
            android:text="Directions"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="123dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/memories"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="11dp"
        android:background="#FFFFFF"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/chewy"
            android:gravity="center"
            android:text="Memories"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

    </android.support.v7.widget.CardView>



    <ImageButton
        android:id="@+id/btnProf"
        android:layout_width="127dp"
        android:layout_height="128dp"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="21dp"
        android:background="#00ff001C"
        android:scaleType="fitXY"
        android:src="@drawable/attendeesicon"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/btnSch"
        android:layout_width="129dp"
        android:layout_height="128dp"
        android:layout_alignEnd="@+id/memories"
        android:layout_centerVertical="true"
        android:background="#00ff001C"
        android:scaleType="fitXY"
        android:src="@drawable/sch"
        android:text="Schedule"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/btnDir"
        android:layout_width="131dp"
        android:layout_height="121dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnProf"
        android:layout_marginBottom="47dp"
        android:background="#00ff001C"
        android:scaleType="fitXY"
        android:src="@drawable/directions"
        android:text="Directions" />

    <ImageButton
        android:id="@+id/memories"
        android:layout_width="131dp"
        android:layout_height="121dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnDir"
        android:layout_marginEnd="33dp"
        android:background="#00ff001C"
        android:scaleType="fitXY"
        android:src="@drawable/memories1" />

    <ImageView
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:scaleType="fitXY"
        android:src="@drawable/au2" />

</RelativeLayout>